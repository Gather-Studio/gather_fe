<%= render partial: "shared/header" %>


<div class="container register-container">
    <h1 class="display-4">Welcome back!</h1>
    <p class="lead">We missed you.</p>
    <hr>
    
  <% flash.each do |type, msg| %>
    <div id="message" class="alert alert-danger">
      <%= "Oops -" %>
      <%= msg %>
    </div>
  <% end %>

  <%= form_with url: login_path, local:true do |f|%>

    <div class="form-row register-form">
    
    </div>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control" %>
    </div>
      <div class="actions">
      <center>
        <%= f.submit "Login", class: "btn btn-primary" %>
      </center>
    </div>

  </div>
<% end %>




<%= render partial: "shared/footer" %>