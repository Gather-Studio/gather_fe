<%= render partial: "shared/header" %>
<div class="jumbotron jumbotron-fluid jumbotron-dash" style="background-color: #eed7c5;">
  <div class="container text-center">
    <h1 class="display-4"><%=@user.first_name%>'s Dashboard</h1>
  </div>
</div>
  <div class="container-fluid" style="background-color: #eed7c5;">
  <div class="row">
    <div class="col">
      <h3> In Progress </h3>
      <ol class="list-group list-group-numbered">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Built</div>
<% @built_items.each do |item| %>
      <ul>
        <li> <%= item.name %> </li>
      </ul>
<% end %>
    </div>
    <span class="badge bg-custom rounded-pill"><%=@built_items.count%></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Trimmed</div>
    <% @trimmed_items.each do |item| %>
      <ul>
        <li> <%= item.name %> </li>
      </ul>
    <% end %>
    </div>
    <span class="badge bg-custom rounded-pill"><%=@trimmed_items.count%></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Bisque </div>
      <% @bisque_items.each do |item| %>
      <ul>
        <li> <%= item.name %> </li>
      </ul>
<% end %>
    </div>
    <span class="badge bg-custom rounded-pill"><%=@bisque_items.count%></span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Glazed</div>
      <% @glazed_items.each do |item| %>
      <ul>
        <li> <%= item.name %> </li>
      </ul>
    <% end %>
    </div>
    <span class="badge bg-custom rounded-pill"><%=@glazed_items.count%></span>
  </li>
</ol>
    </div>
    <div class="col">
      <h3> Finished Pieces </h3>
      <ol class="list-group list-group-numbered">
  <li class="list-group-item d-flex justify-content-between align-items-start">
    <div class="ms-2 me-auto">
      <div class="fw-bold">Finished</div>
  <% @finished_items.each do |item| %>
      <ul>
        <li> <%= item.name %> </li>
      </ul>
<% end %>
    </div>
    <span class="badge bg-custom rounded-pill"><%=@finished_items.count%></span>
  </li>
    </div>
  </div>
</div>





<%= render partial: "shared/footer" %>