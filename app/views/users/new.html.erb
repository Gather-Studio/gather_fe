<%= render partial: "shared/header" %>



<div class="container register-container">
    <h1 class="display-4">Create a Free Account</h1>
    <p class="lead">Gather Studio members can track the progress of their pieces, register for classes and see what fellow makers are creating!</p>
    <hr>
  <% flash.each do |type, msg| %>
    <div id="message" class="alert alert-danger">
      <%= "Oops -" %>
      <%= msg %>
      <%= ". Try again!"%>
    </div>
  <% end %>

  <%= form_with url: users_path, local:true do |f|%>

    <div class="form-row register-form">
    
      <div class="form-group col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autofocus: true, class: "form-control" %>
    </div>

      <div class="actions">
      <center>
        <%= f.submit "Create Account", class: "btn btn-primary" %>
      </center>
    </div>

  </div>
<% end %>




<%= render partial: "shared/footer" %>